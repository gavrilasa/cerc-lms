generator client {
  provider               = "prisma-client"
  output                 = "../lib/generated/prisma"
  moduleFormat           = "esm"
  generatedFileExtension = "ts"
  importFileExtension    = "ts"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  MENTOR
  MEMBER
  USER
  GUEST
}

enum Division {
  SOFTWARE
  EMBEDDED
  MULTIMEDIA
  NETWORKING
  GLOBAL
}

enum UserStatus {
  PENDING
  VERIFIED
  REJECTED
  ARCHIVED
}

enum CurriculumStatus {
  ACTIVE
  ARCHIVED
}

enum CurriculumCourseType {
  CORE
  ELECTIVE
}

enum UserCurriculumStatus {
  IN_PROGRESS
  COMPLETED
}

enum CourseStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum EnrollmentStatus {
  PENDING
  ACTIVE
  CANCELLED
}

enum SubmissionType {
  TASK
  PROJECT
}

enum SubmissionStatus {
  PENDING
  REVIEWED
}

model User {
  id            String   @id
  name          String
  email         String
  emailVerified Boolean  @default(false)
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now()) @updatedAt

  sessions Session[]
  accounts Account[]

  role       Role       @default(GUEST)
  division   Division?
  status     UserStatus @default(PENDING)
  nim        String?    @unique
  generation Int?
  banned     Boolean?   @default(false)
  banReason  String?
  banExpires DateTime?

  selectedCurriculumId String?
  selectedCurriculum   Curriculum?          @relation(fields: [selectedCurriculumId], references: [id])
  curriculumStatus     UserCurriculumStatus @default(IN_PROGRESS)

  courses         Course[]
  enrollments     Enrollment[]
  lessonProgress  LessonProgress[]

  totalPoints         Int          @default(0)
  submissions         Submission[] @relation("UserSubmissions")
  reviewedSubmissions Submission[] @relation("ReviewerSubmissions")

  @@unique([email])
  @@map("user")
}

model Session {
  id             String   @id
  expiresAt      DateTime
  token          String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  ipAddress      String?
  userAgent      String?
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  impersonatedBy String?

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@index([identifier])
  @@map("verification")
}

model Curriculum {
  id          String           @id @default(uuid())
  title       String
  slug        String           @unique
  description String
  division    Division
  status      CurriculumStatus @default(ACTIVE)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  courses CurriculumCourse[]
  users   User[]

  @@index([division])
}

model CurriculumCourse {
  id String @id @default(uuid())

  curriculumId String
  curriculum   Curriculum @relation(fields: [curriculumId], references: [id], onDelete: Cascade)

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  type  CurriculumCourseType @default(CORE)
  order Int?

  @@unique([curriculumId, courseId])
  @@index([order])
  @@index([curriculumId])
  @@index([courseId])
}

model Course {
  id String @id @default(uuid())

  title            String
  description      String
  fileKey          String
  division         Division
  smallDescription String
  slug             String       @unique
  status           CourseStatus @default(DRAFT)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  chapters    Chapter[]
  enrollments Enrollment[]
  curricula   CurriculumCourse[]
  submissions Submission[]

  @@index([division])
  @@index([userId])
  @@index([status])
}

model Chapter {
  id        String   @id @default(uuid())
  title     String
  position  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId String

  lessons Lesson[]

  @@index([courseId, position])
}

model Lesson {
  id          String   @id @default(uuid())
  title       String
  description String?
  position    Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  chapter   Chapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  chapterId String

  lessonProgress LessonProgress[]

  @@index([chapterId, position])
}

model Enrollment {
  id          String           @id @default(uuid())
  status      EnrollmentStatus @default(ACTIVE)
  completedAt DateTime?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId   String

  @@unique([userId, courseId])
}

model LessonProgress {
  id        String   @id @default(uuid())
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId   String
  lesson   Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  lessonId String

  @@unique([userId, lessonId])
}

model Submission {
  id          String           @id @default(uuid())
  title       String
  description String?
  type        SubmissionType
  status      SubmissionStatus @default(PENDING)
  division    Division

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation("UserSubmissions", fields: [userId], references: [id], onDelete: Cascade)
  userId String

  course   Course? @relation(fields: [courseId], references: [id], onDelete: SetNull)
  courseId String?

  reviewer   User?   @relation("ReviewerSubmissions", fields: [reviewerId], references: [id], onDelete: SetNull)
  reviewerId String?

  score    Int?
  feedback String?

  links SubmissionLink[]

  @@index([userId])
  @@index([courseId])
  @@index([division])
  @@index([status])
}

model SubmissionLink {
  id    String @id @default(uuid())
  label String
  url   String

  submission   Submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  submissionId String

  @@index([submissionId])
}
